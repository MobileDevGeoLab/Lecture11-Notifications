<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Examples"
        android:layout_gravity="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/simpleNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Notification"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/expandedNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expanded Notification"
        android:layout_gravity="center"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/progressNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Notification"
        android:layout_gravity="center"
        android:onClick="onClick"/>

</LinearLayout>
